{% extends "master.twig" %}

{% block content %}

	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<div class="panel panel-default">

				<div class="panel-heading">
					<h4>Register</h4>
				</div>

				<div class="panel-body">
				
					<form action="{{ base_url() }}/register" method="POST" class="form-horizontal" role="form" autocomplete="off">

						{{ csrf.field | raw }}
					
						<div class="form-group {{ errors.email ? ' has-error' : '' }}">
							<label class="control-label col-sm-4" for="email">Email Address :</label>
							<div class="col-sm-8">
								<input type="email" name="email" id="email" class="form-control" value="{{ old.email }}" title="">
							</div>
							{% if ( errors.email ) %}	
								<span class="text-danger help-block text-center">{{ errors.email | first }}</span>
							{% endif %}						
						</div>
					
						<div class="form-group {{ errors.name ? ' has-error' : '' }}">
							<label class="control-label col-sm-4" for="name">Name :</label>
							<div class="col-sm-8">
								<input type="text" name="name" id="name" class="form-control" value="{{ old.name }}" title="">
							</div>
							{% if ( errors.name ) %}	
								<span class="text-danger help-block text-center">{{ errors.name | first }}</span>
							{% endif %}								
						</div>
					
						<div class="form-group {{ errors.surname ? ' has-error' : '' }}">
							<label class="control-label col-sm-4" for="surname">Surname :</label>
							<div class="col-sm-8">
								<input type="text" name="surname" id="surname" class="form-control" value="{{ old.surname }}" title="">
							</div>
							{% if ( errors.surname ) %}	
								<span class="text-danger help-block text-center">{{ errors.surname | first }}</span>
							{% endif %}								
						</div>
					
						<div class="form-group {{ errors.phone_number ? ' has-error' : '' }}">
							<label class="control-label col-sm-4" for="phone_number">Phone Number :</label>
							<div class="col-sm-8">
								<input type="text" name="phone_number" id="phone_number" class="form-control" value="{{ old.phone_number }}" title="">
							</div>
							{% if ( errors.phone_number ) %}	
								<span class="text-danger help-block text-center">{{ errors.phone_number | first }}</span>
							{% endif %}								
						</div>
					
						<div class="form-group {{ errors.password ? ' has-error' : '' }}">
							<label class="control-label col-sm-4" for="password">Password :</label>
							<div class="col-sm-8">
								<input type="password" name="password" id="password" class="form-control" value="" title="">
							</div>	
							{% if ( errors.password ) %}	
								<span class="text-danger help-block text-center">{{ errors.password | first }}</span>
							{% endif %}							
						</div>
					
						<div class="form-group">
							<label class="control-label col-sm-4" for="confirm_password">Confirm Password :</label>
							<div class="col-sm-8">
								<input type="password" name="confirm_password" id="confirm_password" class="form-control" value=""title="">
							</div>							
						</div>
				
						<div class="form-group">
							<div class="col-sm-10 col-sm-offset-2">
								<button type="submit" class="btn btn-primary">Register</button>
							</div>
						</div>

					</form>

				</div>

			</div>
		</div>
	</div>

{% endblock %}